<header>
  <style>
    .collapse navbar-collapse {
      position: relative;
    }

    .login-status {
      position: absolute;
      right: 15px;
    }

    button {
      width: 70px;
      height: 36px;
      border-radius: 4px;
      cursor: pointer;
    }

    button:hover {
        font-weight: bold;
      }

    .login-status-btn {
      background-color: transparent;
      color: rgb(53, 51, 51);
      border: 1px solid rgb(36, 35, 35);
    }
    
  </style>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if (username) { %>
          <form action="/logout" method="POST" class="login-status">
            <span>Logged in as: <%= username %>!</span>
            <button type="submit" class="login-status-btn">Logout</button>
          </form>
        <% } else { %>
          <form action="/login" method="POST" class="login-status">
            <input type="text" name="username" placeholder="Username">
            <button type="submit" class="login-status-btn">Login</button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>